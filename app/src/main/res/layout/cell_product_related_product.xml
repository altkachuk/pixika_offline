<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/product_cell_default_size"
    android:orientation="horizontal"
    android:paddingTop="@dimen/contextual_small_margin"
    android:paddingBottom="@dimen/contextual_small_margin"
    android:paddingLeft="@dimen/contextual_default_margin"
    android:paddingRight="@dimen/contextual_default_margin"
    android:background="@drawable/card_view_flat_border">

    <ImageView
        android:id="@+id/recommended_product_picture"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:layout_weight="0.4"/>

    <TextView
        android:id="@+id/recommended_product_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:layout_marginRight="@dimen/contextual_small_margin"
        android:textAppearance="@style/CellRecommendedProduct"
        android:maxLines="3"
        android:ellipsize="end"
        />

</LinearLayout>


