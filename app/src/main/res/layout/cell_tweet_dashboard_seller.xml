<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/contextual_default_margin"
        android:layout_marginRight="@dimen/contextual_default_margin"
        android:layout_marginTop="@dimen/contextual_small_margin"
        android:layout_marginBottom="@dimen/contextual_small_margin">

        <TextView
            android:id="@+id/tweet_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Title1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/contextual_small_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person_black_18dp"
                android:layout_marginRight="@dimen/contextual_small_margin"
                />

            <TextView
                android:id="@+id/tweet_author"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/Caption1"
                android:lines="1"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/tweet_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Caption1"
                android:lines="1"
                android:ellipsize="end"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tweet_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Body1"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/contextual_small_margin"
            />

    </LinearLayout>


</android.support.v7.widget.CardView>
