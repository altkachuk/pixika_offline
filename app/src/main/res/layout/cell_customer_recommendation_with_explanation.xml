<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="0.34"
        android:layout_height="wrap_content">
        <include layout="@layout/cell_customer_recommendation" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.66"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suite aux achats"
                android:textAllCaps="true"
                android:layout_margin="8dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@color/grey57alpha"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:id="@+id/explanation_1_card_view"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_view_flat_border">

                    <ImageView
                        android:id="@+id/explanation_1_image_view"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:scaleType="centerInside"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/explanation_1_title_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:padding="@dimen/contextual_small_margin"
                            />

                        <TextView
                            android:id="@+id/explanation_1_cat_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:padding="@dimen/contextual_small_margin"
                            />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/explanation_2_card_view"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_view_flat_border">

                    <ImageView
                        android:id="@+id/explanation_2_image_view"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:scaleType="centerInside"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/explanation_2_title_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:padding="@dimen/contextual_small_margin"
                            />

                        <TextView
                            android:id="@+id/explanation_2_cat_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:padding="@dimen/contextual_small_margin"
                            />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>



    </LinearLayout>


</LinearLayout>

