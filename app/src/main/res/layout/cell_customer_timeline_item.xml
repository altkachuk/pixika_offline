<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_customer_timeline_container"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:id="@+id/timeline_background_top"
                android:layout_width="97dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/shape_timeline_rectangle" />
            <TextView
                android:id="@+id/event_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@style/TimeLineHeader"
                android:gravity="center"
                android:textColor="@color/White"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <View
                android:id="@+id/timeline_background_bottom"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|center_horizontal"
                android:background="@drawable/shape_timeline_triangle"
                android:rotation="180" />
            <TextView
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAppearance="@style/Title4"
                android:layout_margin="1dp" />
        </FrameLayout>

    </LinearLayout>

</FrameLayout>