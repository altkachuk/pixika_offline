<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/contextual_big_margin"
    android:paddingRight="@dimen/contextual_big_margin">

    <ImageView
        android:id="@+id/sku_specification_icon"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:layout_marginRight="@dimen/contextual_default_margin"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/sku_specification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/contextual_default_margin"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/sku_specification_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:textColor="#212121"
        android:textSize="18sp" />

</LinearLayout>