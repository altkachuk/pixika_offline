<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/contextual_default_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/attribute_review_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"
                android:textColor="#424242"/>

            <TextView
                android:id="@+id/attribute_review_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#424242"
                android:fontFamily="sans-serif-light"
                android:textStyle="italic"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <moshimoshi.cyplay.com.doublenavigation.ui.custom.LikeButton
                android:id="@+id/attribute_like"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="@dimen/contextual_big_margin"/>

            <moshimoshi.cyplay.com.doublenavigation.ui.custom.DislikeButton
                android:id="@+id/attribute_dislike"
                android:layout_width="48dp"
                android:layout_height="48dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/attribute_review_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="@dimen/contextual_default_margin"
        android:paddingBottom="@dimen/contextual_small_margin">
        <TextView
            android:id="@+id/attribute_review_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="16sp"
            android:textColor="@color/textview_review"
            android:enabled="false" />
        <ImageView
            android:id="@+id/attribute_review_comment_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_edit"
            android:padding="8dp"
            android:tint="#212121"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LightGrey"/>

</LinearLayout>