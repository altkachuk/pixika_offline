<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/contextual_default_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <TextView
            android:id="@+id/offer_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/offer_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:paddingLeft="@dimen/contextual_default_margin"/>

        <TextView
            android:id="@+id/offer_period"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="16sp"
            android:textColor="@color/Gray"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/offer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="@dimen/contextual_small_margin"/>
    <TextView
        android:id="@+id/offer_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>