<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/spec_selector_background"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/contextual_small_margin">

    <ImageView
        android:id="@+id/sku_selector_imageview"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:visibility="gone"
        android:padding="8dp"
        android:layout_marginRight="@dimen/contextual_default_margin"
        />

    <TextView
        android:id="@+id/sku_name_selector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:textColor="#424242"
        android:textSize="22sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <ImageView
        android:id="@+id/sku_selector_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_spinner_down"
        android:tint="@color/colorAccent" />

</LinearLayout>