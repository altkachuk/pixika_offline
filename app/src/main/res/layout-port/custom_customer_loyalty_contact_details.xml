<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/contextual_small_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/customer_contact_details_icon"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginRight="@dimen/contextual_default_margin"
            android:scaleType="fitCenter"
            android:tint="@color/colorAccent"
            android:visibility="gone" />

        <TextView
            android:id="@+id/customer_contact_details_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textColor="#808080"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/customer_contact_details_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/GreyishBrown"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/customer_contact_details_value_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/GreyishBrown"
        android:textSize="24sp" />

</LinearLayout>