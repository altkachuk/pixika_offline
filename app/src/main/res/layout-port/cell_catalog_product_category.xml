<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/contextual_default_margin"
    android:clickable="true"
    android:gravity="center"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/category_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        style="@style/TextAppearance.AppCompat.Headline"
        android:paddingLeft="@dimen/contextual_default_margin"
        android:lines="1"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <ProgressBar
        android:visibility="invisible"
        android:id="@+id/category_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/contextual_small_margin"
        android:layout_marginLeft="@dimen/contextual_small_margin"
        />

    <ImageView
        android:layout_marginLeft="@dimen/contextual_small_margin"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_right_arrow"
        android:alpha="0.3"
        />

</LinearLayout>

