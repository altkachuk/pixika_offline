<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_sku_header_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/contextual_big_margin"
    android:gravity="center"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="@dimen/contextual_default_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <TextView
                android:id="@+id/product_brand"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:lines="1"
                android:textColor="@color/White"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:lines="1"
                android:textColor="@color/White"
                android:textSize="21sp"
                android:text=" â€¢ "/>
            <TextView
                android:id="@+id/product_info_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/White"

                android:textSize="19.6sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">
            <TextView
                android:id="@+id/product_sku_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/White"
                android:textSize="17.5sp"/>
            <TextView
                android:id="@+id/product_sku_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/White"
                android:textSize="12.6sp"
                android:paddingLeft="@dimen/contextual_default_margin"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/favorite_product_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_cyplay_task_bar"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:id="@+id/favorite_product_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@drawable/ic_customer_loyalty"
            android:tint="@color/favorite_color"/>
        <TextView
            android:id="@+id/favorite_product_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorite"
            android:lineSpacingMultiplier="0.9"
            android:textColor="@color/favorite_color"
            android:textAllCaps="true"
            android:lines="2"
            android:gravity="center"
            android:paddingRight="@dimen/contextual_small_margin"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>

