<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/contextual_small_margin">
        <ImageView
            android:id="@+id/customer_images_details_icon"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="@dimen/contextual_default_margin"
            android:tint="@color/colorAccent"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/customer_images_details_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:textColor="#808080" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/image_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>